{
	"name": "sveltekit-slides",
	"version": "0.0.1",
	"scripts": {
		"clean": "rm -rf node_modules && npm install -f",
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"check": "svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --ignore-path .gitignore --check --plugin-search-dir=. . && eslint --ignore-path .gitignore .",
		"format": "prettier --ignore-path .gitignore --write --plugin-search-dir=. .",
		"lint:fix": "prettier --ignore-path .gitignore --write --plugin-search-dir=. . && eslint --fix --ignore-path .gitignore .",
		"prepare": "husky install"
	},
	"devDependencies": {
		"@editorjs/editorjs": "^2.23.2",
		"@editorjs/image": "^2.6.2",
		"@editorjs/simple-image": "^1.4.1",
		"@supabase/supabase-js": "^1.8.0",
		"@sveltejs/adapter-node": "^1.0.0-next.67",
		"@sveltejs/adapter-static": "^1.0.0-next.26",
		"@sveltejs/adapter-vercel": "next",
		"@sveltejs/kit": "next",
		"@types/cookie": "^0.4.1",
		"@typescript-eslint/eslint-plugin": "^4.33.0",
		"@typescript-eslint/parser": "^4.33.0",
		"dayjs": "^1.10.7",
		"eslint": "^7.32.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-svelte3": "^3.4.0",
		"file-saver": "^2.0.5",
		"highlight.js": "^11.4.0",
		"husky": "^7.0.4",
		"lint-staged": "^12.3.3",
		"mdsvex": "^0.9.8",
		"prettier": "^2.5.1",
		"prettier-plugin-svelte": "^2.6.0",
		"prism-svelte": "^0.4.7",
		"prism-themes": "^1.9.0",
		"prismjs": "^1.26.0",
		"quill": "^1.3.7",
		"remark-containers": "^1.2.0",
		"remark-github": "^11.2.2",
		"svelte": "^3.46.3",
		"svelte-check": "^2.3.0",
		"svelte-editorjs": "^0.1.0",
		"svelte-highlight": "^5.2.0",
		"svelte-preprocess": "^4.10.2",
		"svelte-prism": "^1.1.3",
		"svelte-windicss-preprocess": "^4.2.5",
		"tslib": "^2.3.1",
		"typescript": "^4.5.5",
		"vite-imagetools": "^4.0.3",
		"vite-plugin-windicss": "^1.6.3",
		"windicss": "^3.4.3"
	},
	"type": "module",
	"dependencies": {
		"@editorjs/header": "^2.6.2",
		"@fontsource/fira-mono": "^4.5.1",
		"@lukeed/uuid": "^2.0.0",
		"cl-editor": "^2.3.0",
		"cookie": "^0.4.1",
		"sharp": "^0.31.0"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.{js,ts,svelte}": [
			"svelte-check",
			"npm run lint:fix"
		]
	}
}
